generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Students table
model Student {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  password    String
  createdAt   DateTime @default(now())

  // Relation to rides as passenger
  rides Ride[] @relation("StudentRides")
}

// Drivers table
model Driver {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  password    String
  plateNumber String   // Required for all drivers
  createdAt   DateTime @default(now())

  // Relation to rides as driver
  rides Ride[] @relation("DriverRides")
}

// Admin table 
model Admin {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

// Rides table
model Ride {
  id          Int      @id @default(autoincrement())
  studentId   Int
  driverId    Int?
  pickup      String
  destination String
  status      String
  createdAt   DateTime @default(now())

  // Relations
  student Student @relation("StudentRides", fields: [studentId], references: [id])
  driver  Driver? @relation("DriverRides", fields: [driverId], references: [id])
}
