generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


// Students table
model Student {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  password    String
  phone       String   @unique //now required Nigerian phone number (+234XXXXXXXXXX)
  createdAt   DateTime @default(now())

  // Relation to rides as passenger
  rides Ride[] @relation("StudentRides")
}

// Drivers table
model Driver {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  password    String
  plateNumber String   // Required for all drivers
  phone       String   @unique //now required Nigerian phone number (+234XXXXXXXXXX)
  createdAt   DateTime @default(now())

  // Relation to rides as driver
  rides Ride[] @relation("DriverRides")
}

// Admin table 
model Admin {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

// Rides table
model Ride {
  id            Int      @id @default(autoincrement())
  studentId     Int
  driverId      Int?
  pickup        String
  destination   String
  distanceKm    Float    // allows decimals like 0.55 km
  durationMins  Float    // allows 2, 2.5, etc. (partial minutes)
  priceNaira    Decimal  @db.Decimal(10, 2) // always stored as XX.XX (e.g. 600.00, 1000.00)
  status        String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt @default(now())



  // Relations
  student Student @relation("StudentRides", fields: [studentId], references: [id])
  driver  Driver? @relation("DriverRides", fields: [driverId], references: [id])
}
